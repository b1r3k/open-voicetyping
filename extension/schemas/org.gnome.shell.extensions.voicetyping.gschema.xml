<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.voicetyping" path="/org/gnome/shell/extensions/voicetyping/">
    <key name="openai-api-key" type="s">
      <default>''</default>
      <summary>OpenAI API Key</summary>
      <description>API key for OpenAI services</description>
    </key>
    <key name="openai-api-url" type="s">
      <default>'https://api.openai.com/v1'</default>
      <summary>OpenAI API URL</summary>
      <description>URL endpoint for OpenAI API</description>
    </key>
    <key name="groq-api-key" type="s">
      <default>''</default>
      <summary>Groq API Key</summary>
      <description>API key for Groq services</description>
    </key>
    <key name="groq-api-url" type="s">
      <default>'https://api.groq.com/v1'</default>
      <summary>Groq API URL</summary>
      <description>URL endpoint for Groq API</description>
    </key>
    <key name="shortcut-start-stop" type="as">
      <default><![CDATA[['<Control><Alt>space']]]></default>
      <summary>Start/Stop Voice Typing Shortcut</summary>
      <description>Keyboard shortcut to start/stop voice typing</description>
    </key>
    <key name="transcription-language" type="s">
      <default>'en'</default>
      <summary>Transcription Language</summary>
      <description>Language for transcription</description>
    </key>
    <key name="inference-provider" type="s">
      <default>'openai'</default>
      <summary>Inference Provider</summary>
      <description>AI service provider for transcription</description>
    </key>
    <key name="inference-model" type="s">
      <default>'whisper-1'</default>
      <summary>Inference Model</summary>
      <description>Model for transcription</description>
    </key>
    <key name="audio-device-name" type="s">
      <default>''</default>
      <summary>Audio Device Name</summary>
      <description>Name of the selected audio input device for recording</description>
    </key>
    <key name="store-transcripts" type="b">
      <default>false</default>
      <summary>Store Transcripts</summary>
      <description>Whether to store voice typing transcripts to a file</description>
    </key>
    <key name="transcript-path" type="s">
      <default>''</default>
      <summary>Transcript Path</summary>
      <description>Path where transcripts should be saved</description>
    </key>
  </schema>
</schemalist>
