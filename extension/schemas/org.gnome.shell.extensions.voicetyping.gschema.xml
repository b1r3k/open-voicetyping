<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.voicetyping" path="/org/gnome/shell/extensions/voicetyping/">
    <key name="openai-api-key" type="s">
      <default>''</default>
      <summary>OpenAI API Key</summary>
      <description>API key for OpenAI services</description>
    </key>
    <key name="openai-api-url" type="s">
      <default>'https://api.openai.com/v1'</default>
      <summary>OpenAI API URL</summary>
      <description>URL endpoint for OpenAI API</description>
    </key>
    <key name="shortcut-start-stop" type="as">
      <default><![CDATA[['<Control><Alt>space']]]></default>
      <summary>Start/Stop Voice Typing Shortcut</summary>
      <description>Keyboard shortcut to start/stop voice typing</description>
    </key>
    <key name="transcription-language" type="s">
      <default>'en'</default>
      <summary>Transcription Language</summary>
      <description>Language for transcription</description>
    </key>
  </schema>
</schemalist>
